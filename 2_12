#include <iostream>
using namespace std;


int main()
{
int n;
cout << "Введите количество элементов: ";
cin >> n;
int max= -100000000;
int min=  100000000;
int a;
cout << "Вводите последовательность: ";
for (int i=1; i<=n; i++) {
cin >> a;
if (a>max) {
max=a;
}
if (a<min)
{
min=a;
}
}
cout << "Сумма минимального и максимального элементов = "<< max+min;
return 0;
}
